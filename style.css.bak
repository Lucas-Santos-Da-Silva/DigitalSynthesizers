/* PCs, notebooks HD ou TV */
@media (min-width:1200px){
    .Container{
        max-width:1000px;
    }
    .MenuFlex {
        height: 130px;
    }
    #logo img{
        width:130px;
        height:100px;
        margin: 10px 0px 0px 10px;
    }
    label {
        display: none;
    }
    nav ul{
        list-style: none;
        height: auto;
        position: static;
        width:100%;
        transition: none;
    }
    nav ul li{
        border: 0;
        float: left;
    }
    nav ul li a{
        color: var(--TextoPreto)
    }
	nav ul li a:hover{
        color: var(--TextoBranco);
    }
}
