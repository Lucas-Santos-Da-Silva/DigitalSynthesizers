/*Importar fonte*/
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Jacquarda+Bastarda+9&family=Manrope:wght@200..800&family=Monofett&display=swap');
/* CSS RESET */
:root{
    --LayoutCorBranca:#ffffff;
    --LayoutCorPreta:#000000;
    --CardFundo: #f1f3f5;
    --TextoCinza: #434343;
	--TextoBranco: #ffffff;
	--TextoPreto:#000000;
	--LayoutCorPrincipal:#0B6AB0;
	--LayoutCorSombra:#084387;
	--LayoutCorSombraProfunda:#042C71;
	--LayoutCorSecundária:#F36B1C;
	--LayoutCorSombraSecundária:#CE4912;
	--LayoutCorAcento:#F8D605;
}
* {
margin:0;
padding:0;
border:0;
}
/** LAYOUT */
html{
    scroll-behavior:smooth;
}
body{
    font-family:"Manrope",sans-serif;
    font-size: 1em;
}
section{
    margin: 0 auto ;
    display: flex; 
    justify-content: center;
}
h1{
    font-family:"Manrope",sans-serif;
    font-size:2em;
}
/* Centralização de conteúdo */
.Container{
    margin:0 auto;
    padding:50px 15px 50px 15px;
}
.MenuFlex{
    display:flex;
	flex-direction: row;
	align-items:center;
	align-content:center;
    justify-content: space-between;
	margin:auto;
	background-color: var(--LayoutCorPrincipal);
}
.MenuFlex a{
	color: var(--TextoBranco);
}
.Flex{
    display:flex;
    justify-content:space-between;
	flex-direction:row-reverse;
	align-items:center;
}

.Card{
    margin-top: 30px;
    width: 338px;
    height: 520px;
    background-color: var(--CardFundo);
    border: 1px solid var(--LayoutCorPreta);
    border-radius: 25px;
    display:flex;
	flex-direction:column;
	align-content: space-between;
    text-align: center;
}
.Card img{
    border-radius: 25px 25px 0px 0px;
}
.Card h3 {
    margin: 150px 30px 0px 30px;
}
.Card p {
    padding: 10px 30px 25px 30px;
    text-align: left;
    color: var(--TextoCinza);
}
.Button{
    text-decoration: none;
    background-color: var(--LayoutCorSecundária);
    color: var(--TextoBranco);
    padding: 10px 40px;
    border: 1px solid var(--LayoutCorPreta);
    border-radius: 25px;
    font-size: 1.2em;
    font-weight: 700;
}
#logo img{
    width:130px;
    height:100px;
    margin: 10px 0px 0px 10px;
}
footer{
    background-color:var(--LayoutCorPreta);
    color:var(--TextoBranco);
    text-align:center;
}
#social{
    margin-bottom:25px;       
}
header a{
    text-decoration:none;
    color:white;
}
footer a{
    text-decoration:none;
}
#topo{
	opacity: 0.5;
}
.Card a:hover{
        color: var(--TextoPreto);
    }
.Titulo{
	color: var(--TextoPreto);
	position: absolute;
	width: 100%;
	text-align: center;
	font-size: 18px;
	}
.Container{
	display: flex;
	flex-direction: column;
}


/* Smartphone portrait */
@media (min-width:375px){
    #social{
        margin-bottom:0px;       
    }
    
    /********** Cabeçalho **********/
    .Container{
        max-width:350px;
    }
    .MenuFlex {
        height: 130px;
        
        margin: auto;
    }
    #logo img{
        width:130px;
        height:100px;
        margin: 10px 0px 0px 10px;
    }
    #topo{
        position:fixed;
        bottom: 0px;
        right: 0px;
        color: rgba(0, 0, 0, 0.2)
    }
    #check{
        display:none;
        
    }
    label {
        font-size: 1em;
        position: fixed;
        top: 10px;
        right: 10px;
        font-size:3em;
    }
    nav ul{
        list-style: none;
        background-color: rgba(60, 60, 60, 0.8);
        height: 100vh;
        position: fixed;
        top: 80px;
        right: -70%;/*estratégia para remover menu */
        width:70%;
        transition: all 0.5s;
    }
    #check:checked~ul{
        right: 0;
    }
    nav ul li{
        border-bottom: 0.5px solid var(--borda);
        padding: 15px;
    }
    nav ul li a{
        text-decoration: none;
        color: var(--textoLayout)
    }
    footer div a img{
        width: 30px;
        height: 30px;   
        display: inline-block; 
    }
    footer div{
        margin:10px;
    }
}
